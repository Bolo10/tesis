{{>header}}
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs5/dt-1.11.4/r-2.2.9/datatables.min.css" />
<link rel="stylesheet" href="assets/css/tables.css">
<div class="container-fluid">
    <div class="row flex-nowrap">
        {{>dashbar}}

        <div style="margin-top: 50px;">
            <table id="example" class="table table-striped table-bordered" style="width:50%">
                <thead>
                    <tr>
                        <th>Email</th>
                        <th>Nombre</th>

                        <th>Inscripci√≥n</th>
                        <th>Editar</th>
                        <th>Eliminar</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each usuarios}}
                    <tr>
                        <td>{{this.email}}</td>
                        <td>{{this.nombre}}</td>


                        <td>{{#if this.inscripcion}} SI {{else}} NO {{/if}}</td>
                        <td>
                            <form method="POST" action="/updateuser">
                                <input hidden value="{{this.uid}}" name="uid">
                                <button type="submit" class="btn btn-success">
                                    <i class="bi bi-person-check-fill"></i>
                                    Modificar Usuario
                                </button>
                            </form>
                        </td>
                        <td>
                            <form method="POST" action="/deleteuser">
                                <input hidden value="{{this.uid}}" name="duid">
                                <button type="submit" class="btn btn-danger">
                                    <i class="bi bi-person-x-fill"></i>
                                    Eliminar Usuario
                                </button>
                            </form>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>
</div>
</div>
</div>

