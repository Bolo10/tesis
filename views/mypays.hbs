{{>header}}
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs5/dt-1.11.4/r-2.2.9/datatables.min.css" />
<link rel="stylesheet" href="assets/css/tables.css">
<div class="container-fluid">

    <div class="row flex-nowrap">
        {{>dashbar}}
        <div class="container">
            <div class="row">
                <h3>Pagos por Cobrar</h3>
            </div>
            <div class="row">
                <div style="margin-top: 50px;">
                    <table id="actuales" class="table table-striped table-bordered" style="width:50%">
                        <thead>
                            <tr>
                                <th>Fecha Año-Mes-Día</th>
                                <th>Nombre</th>
                                <th>Abonado</th>
                                <th>Mensualidad</th>
                                <th>Enviar Whats</th>
                                <th>Editar</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each actuales}}
                            {{#this}}
                            <tr>
                                <td>{{this.actual}}</td>
                                <td>{{this.nombre}}</td>

                                <td>{{this.monto}}</td>
                                <th>{{this.mensual}}</th>
                                <td>
                                    <a href="{{this.url}}" class="btn btn-success btn-lg" tabindex="-1" role="button"><i
                                            class="bi bi-whatsapp"></i>Enviar Whats</a>
                                </td>
                                </td>
                                <td>
                                    <form method="POST" action="/updatepay">
                                        <input hidden value="{{this.uid}}" name="uid">
                                        <button type="submit" class="btn btn-primary">
                                            <i class="bi bi-calendar-check-fill"></i>
                                            Modificar Pago
                                        </button>
                                    </form>
                                </td>

                            </tr>
                            {{/this}}
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="row">
                <h3>Pagos Vencidos</h3>
            </div>
            <div class="row">
                <div style="margin-top: 50px;">
                    <table id="vencidos" class="table table-striped table-bordered" style="width:50%">
                        <thead>
                            <tr>
                                <th>Fecha Año-Mes-Día</th>
                                <th>Nombre</th>
                                <th>Abonado</th>
                                <th>Mensualidad</th>
                                <th>Enviar Whats</th>
                                <th>Editar</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each vencidos}}
                            {{#this}}
                            <tr>
                                <td>{{this.vencido}}</td>
                                <td>{{this.nombre}}</td>
                                <td>{{this.monto}}</td>
                                <td>{{this.mensualidad}}</td>
                                <td>

                                    <a href="{{this.url}}" class="btn btn-success btn-lg" tabindex="-1" role="button"><i
                                            class="bi bi-whatsapp"></i>Enviar Whats</a>
                                </td>
                                </td>
                                <td>
                                    <form method="POST" action="/updatepay">
                                        <input hidden value="{{this.uid}}" name="uid">
                                        <button type="submit" class="btn btn-primary">
                                            <i class="bi bi-calendar-check-fill"></i>
                                            Modificar Pago
                                        </button>

                                    </form>
                                </td>

                            </tr>
                            {{/this}}
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="row">
                <h3>Proximos Pagos</h3>
            </div>
            <div class="row">
                <div style="margin-top: 50px;">
                    <table id="proximos" class="table table-striped table-bordered" style="width:50%">
                        <thead>
                            <tr>
                                <th>Fecha Año-Mes-Día</th>
                                <th>Nombre</th>
                                <th>Abonado</th>
                                <th>Mensualidad</th>
                                <th>Editar</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each proximos}}
                            {{#this}}
                            <tr>
                                <td>{{this.proximo}}</td>
                                <td>{{this.nombre}}</td>

                                <td>{{this.monto}}</td>
                                <td>{{this.mensualidad}}</td>
                                <td>
                                    <form method="POST" action="/updatepay">
                                        <input hidden value="{{this.uid}}" name="uid">
                                        <button type="submit" class="btn btn-primary">
                                            <i class="bi bi-calendar-check-fill"></i>
                                            Modificar Pago
                                        </button>
                                    </form>
                                </td>

                            </tr>
                            {{/this}}
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
</div>
</div>
</div>

{{> packages}}
<script>

    mytable = $(document).ready(function () {
        $('#actuales').DataTable({
            responsive: true,
            "sDom": '<"wrapper"lfptip>'
        });
        $('#vencidos').DataTable({
            responsive: true,
            "sDom": '<"wrapper"lfptip>'
        });
        $('#proximos').DataTable({
            responsive: true,
            "sDom": '<"wrapper"lfptip>'
        });

    });
</script>
<script type="text/javascript" src="https://cdn.datatables.net/v/bs5/dt-1.11.4/r-2.2.9/datatables.min.js"></script>
{{>footer}}