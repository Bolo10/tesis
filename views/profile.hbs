<div class="container mt-4 mb-4 p-3 d-flex justify-content-center">
    <div class="card p-4">

        <div class="accordion accordion-flush" id="accordionFlushExample">
            {{#each user.historial}}
            {{#this}}
            <div class="accordion-item">

                <h2 class="accordion-header" id="flush-heading{{@index}}">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                        data-bs-target="#flush-collapse{{@index}}" aria-expanded="false"
                        aria-controls="flush-collapse{{@index}}">
                        <div class="alert alert-primary d-flex align-items-center" role="alert">
                            <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Info:">
                                <use xlink:href="#info-fill" />
                            </svg>
                            <div>
                                <span class="join">{{initdate}} </span>
                            </div>
                        </div>
                    </button>

                </h2>
                <div id="flush-collapse{{@index}}" class="accordion-collapse collapse"
                    aria-labelledby="flush-heading{{@index}}" data-bs-parent="#accordionFlushExample">
                    <h3>VÃ¡lido hasta: <span class="badge bg-success">{{findate}}</span></h3>
                    <h3>Abonado: <span class="badge bg-warning text-dark">${{monto}}</span></h3>
                </div>

            </div>
            {{/this}}
            {{/each}}
        </div>

    </div>
</div>




{{else}}
<div class="container mt-4 mb-4 p-3 d-flex justify-content-center">
    <div class="card p-4">

        {{#each user.historial}}
